import RPi.GPIO as GPIO  
from time import sleep   
GPIO.setmode(GPIO.BCM)
GPIO.setup(4, GPIO.IN)    
counter = 0

try:                      
    while True:                  
        if GPIO.input(4):
            print("I'm reading TRUE on GPIO 4")
            counter += 1
        
        
        else:  
            print("I'm reading FALSE on GPIO 4") 
            counter -= 1
        sleep(1)
        print(counter)  
finally:                     
    print("Cleaning up...")
    GPIO.cleanup()        

    
    
    
    
